@model List<Category>
@using ScientificEdition.Data.Entities

@{
    ViewData["Title"] = "Список категорій";
}

<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Admin">Панель керування</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Список категорій</li>
        </ol>
    </nav>

    <h2 class="text-start">Список категорій</h2>
    <div class="text-end mb-3">
        <a asp-controller="Category" asp-action="Create" class="btn btn-success">Додати нову категорію</a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Назва</th>
                <th>Кількість статей</th>
                <th>Кількість рецензентів</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Articles.Count</td>
                    <td>@category.Users.Count</td>
                    <td class="text-center">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-info btn-sm">Редагувати</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
