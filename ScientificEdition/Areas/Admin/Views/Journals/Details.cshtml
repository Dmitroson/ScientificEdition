@model JournalEdition
@using ScientificEdition.Data
@using ScientificEdition.Data.Entities

@{
    ViewData["Title"] = "Видання";
}

<div class="container mt-5 col-lg-9">
    <h2>@Model.Title</h2>
    <p><strong>Категорія:</strong> @Model.Category!.Name</p>
    <p><strong>Опубліковано:</strong> @(Model.Published ? "Так" : "Ні")</p>
    <p><strong>Дата публікації:</strong> @Model.PublishDate?.ToString("dd.MM.yyyy")</p>

    <div class="mt-3">
        <h3>Статті</h3>
        <ul class="list-group">
            @foreach (var article in Model.Articles)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <a href="@Url.Action("Details", "Articles", new { id = article.Id })">
                            @article.Title - @article.Author!.FullName - @article.UploadDate.ToString("dd.MM.yyyy")
                        </a>
                    </div>
                    <a class="btn btn-outline-secondary btn-sm" href="@Url.Action("DownloadVersion", "Articles", new { versionId = article.Id })">
                        Завантажити
                    </a>
                </li>
            }
        </ul>
    </div>
</div>
