@using ScientificEdition.Areas.Admin.Models.Journal
@using ScientificEdition.Business
@model JournalPublishInputModel
@inject CategoryManager CategoryManager
@inject JournalManager JournalManager

<div>
    <h5>@Model.Journal!.Title</h5>
    <p>Категорія: @Model.Journal!.Category!.Name</p>

    <form method="post" asp-action="Publish">
        <input hidden asp-for="JournalId" />

        <div class="form-group mb-3">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" asp-for="Publish" />
                <label class="form-check-label" asp-for="Publish">Опублікувати зараз</label>
            </div>
        </div>

        <div class="form-group mb-3">
            <label asp-for="PublishDate" class="form-label">Дата публікації</label>
            <input asp-for="PublishDate" class="form-control" type="datetime-local" />
            <span asp-validation-for="PublishDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Підтвердити</button>
    </form>
</div>
