@using ScientificEdition.Data
@model ScientificEdition.Data.Entities.Article

@{
    ViewData["Title"] = "Видалення";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Ви впевнені, що хочете видалити статтю?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Назва
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Автор
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author!.FullName)
        </dd>
        <dt class="col-sm-2">
            Категорія
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category!.Name)
        </dd>
        @if (User.IsInRole(UserRoles.Admin))
        {
            <dt class="col-sm-2">
                Коментар
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Comment)
            </dd>
        }
        <dt class="col-sm-2">
            Дата створення
        </dt>
        <dd class="col-sm-10">
            @Model.UploadDate.ToString("dd.MM.yyyy")
        </dd>
        <dt class="col-sm-2">
            Поточний статус
        </dt>
        <dd class="col-sm-10">
            @TextHelper.Text($"ArticleStatus_{Model.Status}")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутись</a>
    </form>
</div>
